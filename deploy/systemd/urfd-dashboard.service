[Unit]
Description=URFD NNG Dashboard
After=network.target

[Service]
Type=simple
User=urfd
Group=urfd
WorkingDirectory=/usr/local/bin
ExecStart=/usr/local/bin/urfd-dashboard
Restart=always
RestartSec=5
# Configuration can be passed via Env files
# EnvironmentFile=/etc/default/urfd-dashboard

[Install]
WantedBy=multi-user.target
